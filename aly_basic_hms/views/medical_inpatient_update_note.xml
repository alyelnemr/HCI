<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="medical_inpatient_update_note_form_view" model="ir.ui.view">
            <field name="name">medical.inpatient.update.note.form.view</field>
            <field name="model">medical.inpatient.update.note</field>
            <field name="arch" type="xml">
                <form string="Inpatient Registration Update Notes">
                    <sheet>
                        <group string="Administrative Data">
                            <group>
                                <field name="name" />
                                <field name="inpatient_id" options="{'always_reload': 1, 'limit':2, 'no_create_edit': True, 'no_create': True, 'no_edit': True}" />
                                <field name="update_note_date" />

                            </group>
                            <group>
                                <field name="attending_physician_id" />
                            </group>
                            <group string="Invoice Data" attrs="{'invisible': True}">
                                <field name="is_discharged" attrs="{'invisible': True}"/>
                                <field name="invoice_id" readonly="1" attrs="{'invisible': True}"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Management">
                            <group string="Administrative Data">
                                <group>
                                    <span>The Patient has been admitted in</span>
                                    <field name="admission_type_management" />
                                </group>
                            </group>
                        </page>
                            <page string="Care Plan">
                                <group>
                                    <field name="nursing_plan" />
                                    <field name="discharge_plan" />
                                </group>
                            </page>
                            <page string="Notes">
                                <group>
                                    <field name="info" string="Notes" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>

            </field>
        </record>

        <record id="medical_inpatient_update_note_tree_view" model="ir.ui.view">
            <field name="name">medical.inpatient.update.note.tree.view</field>
            <field name="model">medical.inpatient.update.note</field>
            <field name="arch" type="xml">
                <tree
                    string="Inpatient Update Note Info">
                    <field name="name" />
                    <field name="inpatient_id" />
                    <field name="update_note_date" />
                </tree>

            </field>
        </record>

        <record id="action_medical_inpatient_update_note" model="ir.actions.act_window">
            <field name="name">Inpatient Update Notes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.inpatient.update.note</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>


</odoo>
