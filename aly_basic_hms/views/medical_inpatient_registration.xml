                <!--<field name="name" position="attributes" >-->
                    <!--<attribute name="readonly">1</attribute>-->
                <!--</field>-->
            <!--</field>-->
        <!--</record>-->

        <record id="action_medical_inpatient_registration" model="ir.actions.act_window">
            <field name="name">Inpatient Admission</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.inpatient.registration</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>


    <act_window id="action_view_inpatient_new" name="Patient Admissions"
                res_model="medical.inpatient.registration" binding_model="medical.patient"
                view_mode="tree,form" domain="[('patient_id', '=', active_id)]"/>


</odoo>
