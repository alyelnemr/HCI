<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="res_user_inherit_form_health_center_view" model="ir.ui.view">
            <field name="name">res.user.inherit.form.health.center.view</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
                <notebook>
                    <page string="Medical">
                        <group >
                            <field name="max_allowed_discount" />
                            <field name="default_clinic_id"  />
                            <field name="allowed_clinic_ids" widget="many2many_tags" />
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="res_account_move_inherit_form" model="ir.ui.view">
            <field name="name">res.account.move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_post']" position="replace">
                        <button name="action_post" string="Confirm" class="oe_highlight"
                                type="object" groups="base.group_user"
                                attrs="{'invisible': ['|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '=', 'entry')]}"/>
                </xpath>
                <xpath expr="//button[@name='action_register_payment']" position="replace">
                        <button name="action_register_payment" id="account_invoice_payment_btn"
                                type="object" class="oe_highlight"
                                attrs="{'invisible': ['|', '|', ('state', '!=', 'posted'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"
                                context="{'dont_redirect_to_payments': True}"
                                string="Register Payment"
                                groups="base.group_user"/>
                </xpath>
            </field>
        </record>

</odoo>

