<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="medical_invoice_core">
        <div>
            <table style="width:100%">
                <table class="table table-sm text-center" style="width:100%;border: 1px double black;">
                    <tr>
                        <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Medical Service</th>
                        <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Qty</th>
                        <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Unit Price</th>
                        <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Amount</th>
                    </tr>
                    <t t-foreach="doc.invoice_line_ids" t-as="line">
                        <tr>
                            <td><span t-field="line.product_id.name" class="text-center"/></td>
                            <td><span t-field="line.quantity" class="text-center"/></td>
                            <td><span t-field="line.price_unit" class="text-center"/></td>
                            <td><span t-field="line.price_subtotal" class="text-center"/></td>
                        </tr>
                    </t>
                    <tr>
                        <td><br/></td>
                    </tr>
                    <tr>
                        <td colspan="3">Subtotal</td>
                        <td><span t-field="doc.amount_untaxed" class="text-center"/></td>
                    </tr>
                    <tr>
                        <td colspan="3">Service Charge 12.5%</td>
                        <td><span t-esc="tax_amount" class="text-center"/></td>
                    </tr>
                </table>
            </table>
        </div>
	</template>
    <template id="medical_invoice_template">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="doc">
                        <t t-if="doc.company_id.header">
                            <div class="header">
                                <t t-set="company" t-value="doc.company_id"></t>
                                <div class="row mt32 mb32">
                                    <div class="col-6">
                                        <img t-att-src="'data:image/png;base64,%s' % to_text(company.header)"
                                             />
                                    </div>
                                </div>
                            </div>
                        </t>
                        <t t-call="web.internal_layout">
                            <div>
                            <div>
                                <br/><br/>
                                <h3 class="text-center">
                                    <t t-if="is_draft">Estimate Cost</t>
                                    <t t-if="is_draft==False">Invoice</t>
                                </h3>
                            </div>
                            <table class="table table-sm text-center" style="width:100%;border: 1px double black;">
                                <tr>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">To</th>
                                    <td colspan="3">
                                        <b><span t-field="doc.partner_id.patient_id.bill_to" class="text-center"/></b>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Patient Name</th>
                                    <td>
                                        <b><span t-field="doc.partner_id.name" class="text-center"/></b>
                                    </td>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Date of Birth</th>
                                    <td>
                                        <span t-field="doc.partner_id.patient_id.date_of_birth" class="text-center"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Our Ref#</th>
                                    <td>
                                        <span t-field="doc.partner_id.patient_id.our_reference" class="text-center"/>
                                    </td>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Insurance Ref#</th>
                                    <td>
                                        <span t-field="doc.partner_id.patient_id.insurance_reference" class="text-center"/>
                                    </td>
                                </tr>
                                <t t-if="min_admission_date">
                                    <tr>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Admission Date</th>
                                    <td>
                                        <span t-esc="min_admission_date" class="text-center"/>
                                    </td>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Discharge Date</th>
                                    <td>
                                        <span t-esc="min_discharge_date" class="text-center"/>
                                    </td>
                                </tr>
                                </t>
                            </table>
                                <t t-call="aly_basic_hms.medical_invoice_core">
                                </t>
                            </div>
                        </t>
                        <t t-if="doc.company_id.footer" >
                            <div class="footer">
                                <t t-set="company" t-value="doc.company_id"></t>
                                <div class="row mt32 mb32">
                                    <div class="col-6">
                                        <img t-att-src="'data:image/png;base64,%s' % to_text(company.footer)"
                                             />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                </t>
        </template>
</odoo>
