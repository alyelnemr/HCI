<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="medical_invoice_core">
        <div>
            <table style="width:100%">
                <tr>
                <table class="table table-sm text-center" style="width:100%;border: 1px double black;">
                    <tr>
                        <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Medical Service</th>
                        <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Qty</th>
                        <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Unit Price</th>
                        <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">Amount</th>
                    </tr>
                    <t t-foreach="doc.invoice_line_ids" t-as="line">
                        <t t-if="line.product_id.categ_id.name!='Prosthetics'">
                            <t t-if="line.product_id.categ_id.name!='Disposables'">
                                <t t-if="line.product_id.categ_id.name!='Discounts'">
                                    <tr>
                                        <td><span t-field="line.product_id.name" class="text-center"/></td>
                                        <td><span t-field="line.quantity" class="text-center"/></td>
                                        <td><span t-field="line.price_unit" class="text-center"/></td>
                                        <td><span t-field="line.price_subtotal" class="text-center"/></td>
                                    </tr>
                                </t>
                            </t>
                        </t>
                    </t>
                </table>
                </tr>
                <tr style="display: block;" class="pull-left">
                <div style="display: block;">
                        <table class="table table-condensed">
                            <tr class="border-black text-center">
                                <td>
                                    <strong>Subtotal</strong>
                                </td>
                                <td class="text-right">
                                    <span t-esc="var_subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                </td>
                            </tr>
                            <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                <tr class="text-center">
                                    <td><span t-esc="amount_by_group[0]"/></td>
                                    <td class="text-right">
                                        <span t-esc="amount_by_group[1]" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="var_disposable>0">
                                <tr class="text-center">
                                    <td>Disposables and Supplies</td>
                                    <td class="text-right">
                                        <t t-esc="var_disposable" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
                                    </td>
                                </tr>
                            </t>
                            <t t-if="var_prosthetics>0">
                                <tr class="text-center">
                                    <td>Prosthetics</td>
                                    <td class="text-right">
                                        <t t-esc="var_prosthetics" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
                                    </td>
                                </tr>
                            </t>
                            <tr class="border-black text-center">
                                <td>
                                    <strong>Total</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="doc.amount_total" />
                                </td>
                            </tr>
                            <t t-if="var_discount_percent > 0">
                                <tr class="border-black text-center">
                                    <td>Discount</td>
                                    <td t-attf-class="text-right">
                                        <span t-esc="var_discount_percent"/>%
                                    </td>
                                </tr>
                            </t>
                            <t t-set="is_payment_exist" t-value="False"/>
                            <t t-if="doc.payment_state != 'invoicing_legacy'">
                                <t t-set="payments_vals" t-value="doc.sudo()._get_reconciled_info_JSON_values()"/>
                                <t t-foreach="payments_vals" t-as="payment_vals">
                                    <t t-set="is_payment_exist" t-value="False"/>
                                    <tr class="text-center">
                                        <td>
                                            <i class="oe_form_field text-right oe_payment_label">Amount Paid on <t t-esc="payment_vals['date']"/></i>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="payment_vals['amount']" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <t t-if="is_payment_exist == False">
                                <tr class="text-center">
                                    <td>
                                        <i class="oe_form_field text-right oe_payment_label">Amount Paid </i>
                                    </td>
                                    <td class="text-right">
                                        <t t-set="zero_payment" t-value="0"/>
                                        <span t-esc="zero_payment" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
                                    </td>
                                </tr>
                            </t>
                            <tr class="border-black text-center">
                                <td><strong>Amount Due</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_residual"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div style="display: block;" class="pull-left text-left">
                        <t t-if="doc.company_id.bank_details" >
                            <p class="text-left" style="display: block;">
                                <span t-field="doc.company_id.bank_details" />
                            </p>
                        </t>
                    </div>
                </tr>
            </table>
        </div>
	</template>
    <template id="medical_invoice_template">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="doc">
                        <t t-if="doc.company_id.header">
                            <div class="header">
                                <t t-set="company" t-value="doc.company_id"></t>
                                <div class="row mt32 mb32">
                                    <div class="col-6">
                                        <img t-att-src="'data:image/png;base64,%s' % to_text(company.header)"
                                             />
                                    </div>
                                </div>
                            </div>
                        </t>
                        <t t-call="web.internal_layout">
                            <div>
                                <div>
                                    <br/><br/>
                                    <h3 class="text-center">
                                        <t t-if="is_draft">Estimate Cost</t>
                                        <t t-if="is_draft==False">Invoice</t>
                                    </h3>
                                </div>
                            <table class="table table-sm text-center" style="width:100%;border: 1px double black;">
                                <tr>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;">To</th>
                                    <td colspan="3" class="text-left">
                                        <b><span t-field="doc.partner_id.patient_id.bill_to" class="text-left"/></b>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;width: 20%;">Patient Name</th>
                                    <td>
                                        <b><span t-field="doc.partner_id.name" class="text-center"/></b>
                                    </td>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;width: 20%;">Date of Birth</th>
                                    <td>
                                        <span t-field="doc.partner_id.patient_id.date_of_birth" class="text-center"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;width: 20%;">Our Ref#</th>
                                    <td>
                                        <span t-field="doc.partner_id.patient_id.our_reference" class="text-center"/>
                                    </td>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;width: 20%;">Insurance Ref#</th>
                                    <td>
                                        <span t-field="doc.partner_id.patient_id.insurance_reference" class="text-center"/>
                                    </td>
                                </tr>
                                    <tr>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;width: 20%;">Admission Date</th>
                                    <td>
                                        <t t-if="min_admission_date">
                                            <span t-esc="min_admission_date" class="text-center"/>
                                        </t>
                                    </td>
                                    <th style="background-color:MediumSlateBlue !important;color:#FFF !important;width: 20%;">Discharge Date</th>
                                    <td>
                                        <t t-if="min_admission_date">
                                            <span t-esc="min_discharge_date" class="text-center"/>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                                <t t-call="aly_basic_hms.medical_invoice_core">
                                </t>
                            </div>
                        </t>
                        <t t-if="doc.company_id.footer" >
                            <div class="footer">
                                <t t-set="company" t-value="doc.company_id"></t>
                                <div class="row mt32 mb32">
                                    <div class="col-6">
                                        <img t-att-src="'data:image/png;base64,%s' % to_text(company.footer)"
                                             />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                </t>
        </template>
</odoo>
