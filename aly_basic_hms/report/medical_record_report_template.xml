<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="medical_report_core">
        <div style="font-size: 15px;;font-family: Arial;font-weight: normal;">
            <table style="width:100%">
                <tbody class="sale_tbody" style="width:100%">
                    <tr>
                        <td style="width:30%">Patient Complaint:</td>
                        <td style="width:80%;">
                            <span t-field="doc.patient_complaint" />
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30%">Food &amp; Drug Allergy:</td>
                        <td style="width:80%">
                            <span t-field="doc.food_drug_allergy" />
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30%">History of Present Illness (HPI):</td>
                        <td style="width:80%">
                            <span t-field="doc.history_present_illness" />
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30%">Past medical History (PMH):</td>
                        <td style="width:80%">
                            <span t-field="doc.past_medical_history" />
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30%">Past surgical History (PSH):</td>
                        <td style="width:80%">
                            <span t-field="doc.past_surgical_history" />
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30%">Family History (FH):</td>
                        <td style="width:80%">
                            <span t-field="doc.family_history" />
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30%">Social History (SH):</td>
                        <td style="width:80%">
                            <span t-field="doc.social_history" />
                        </td>
                    </tr>
                </tbody>
            </table>
            <table style="width:100%">
                <tbody class="sale_tbody" style="width:100%">
                    <t t-if="doc.diagnosis_final">
                        <tr>
                            <td style="width:30%"><strong>Final Diagnosis:</strong></td>
                            <td style="width:80%">
                                <span t-field="doc.diagnosis_final" />
                            </td>
                        </tr>
                    </t>
                    <br/>
                    <t t-if="doc.diagnosis_provisional">
                        <tr>
                            <td style="width:30%">
                                <strong>Provisional Diagnosis:</strong>
                            </td>
                            <td style="width:80%">
                                <span t-field="doc.diagnosis_provisional" />
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
            <t t-foreach="sorted_data" t-as="my_list_obj">
                <t t-if="my_list_obj['obj_type']=='app'">
                    <br/>
                    <div>
                        <h4 class="text-center"><strong>Update Notes</strong></h4>
                    </div>
                        <br/>
